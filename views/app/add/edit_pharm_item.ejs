<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
        <div class="pcoded-inner-content">

            <!-- Main-body start -->
            <div class="main-body">
                <div class="page-wrapper">
                    <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                    <!-- Page header start -->
                    <div class="page-header">
                        <div class="page-header-title">
                            <h4>Pharmacy Inventory</h4>
                            
                        </div>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="/dashboard">
                                        <i class="icofont icofont-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item"><a href="#!">Add Items</a>
                                </li>
                                <li class="breadcrumb-item"><a href="/pharmacy-items">Pharmacy Items</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- Page header end -->
                    <!-- Page body start -->
                    <div class="page-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <!-- Basic Form Inputs card start -->
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Update Item</h5>
                                    </div>
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-sm-12 mobile-inputs">
                                                <form action="/edit-pharmacy-item/<%= item._id %>" method="POST">
                                                    <!-- <div class="form-group">
                                                        <input type="text" class="form-control form-txt-primary" placeholder=".form-txt-primary">
                                                    </div> -->
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Name</label>
                                                            <input type="text" value="<%= item.name %>" class="form-control" readonly>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Description</label>
                                                            <input type="text" name="description" class="form-control" value="<%= item.description %>" >
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Product Code</label>
                                                            <input type="text" name="productcode" class="form-control" value=" <%= item.productcode %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Shelf No</label>
                                                            <select  name="shelf" class="form-control select" >
                                                                <option selected disabled>Select</option>
                                                                <option value="A" <%= item.shelf ? 'selected' : '' %>>A</option>
                                                                <option value="B" <%= item.shelf ? 'selected' : '' %>>B</option>
                                                                <option value="C" <%= item.shelf ? 'selected' : '' %>>C</option>
                                                                <option value="D" <%= item.shelf ? 'selected' : '' %>>D</option>
                                                                <option value="E" <%= item.shelf ? 'selected' : '' %>>E</option>
                                                                <option value="F" <%= item.shelf ? 'selected' : '' %>>F</option>
                                                                <option value="G" <%= item.shelf ? 'selected' : '' %>>G</option>
                                                                <option value="H" <%= item.shelf ? 'selected' : '' %>>H</option>
                                                                <option value="I" <%= item.shelf ? 'selected' : '' %>>I</option>
                                                                <option value="J" <%= item.shelf ? 'selected' : '' %>>J</option>
                                                                <option value="K" <%= item.shelf ? 'selected' : '' %>>K</option>
                                                                <option value="L" <%= item.shelf ? 'selected' : '' %>>L</option>
                                                                <option value="M" <%= item.shelf ? 'selected' : '' %>>M</option>
                                                               
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        
                                                        <div class="col-sm-6">
                                                            <label for="">Voucher/Ref No</label>
                                                            <input type="text" name="voucher" class="form-control" value="<%= item.voucher %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label>Received From</label>
                                                            <select name="vendor" class="form-control js-example-basic-single">
                                                                <option selected disabled>Select</option>
                                                                <% users.forEach((user)=>{  %>
                                                                    <option value="<%= user._id %>" <%= item.vendor ? 'selected' : '' %>><%= user.company %></option>
                                                                <% }) %>
                                                            </select>
                                                        </div>
                                                       
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Batch No</label>
                                                            <input type="text" name="batch" class="form-control" value="<%= item.batch %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                                <label>Expiration Date</label>
                                                                <input type="text" id="datetimepicker7" name="expiration" class="form-control" value="<%= item.expiration.toDateString() %>" >
                                                        </div>
                                                    </div>
                                                    <h5 style="color:dodgerblue" class="page-title">Quantity</h5><br><br>
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Quantity</label>
                                                            <input type="number" name="quantity" id="quantity" class="form-control" value="<%= item.quantity %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Unit</label>
                                                            <select name="unit" class="form-control select" >
                                                                <option selected disabled>Select</option>
                                                                <option value="Ampoule" <%= item.unit ? 'selected' : '' %>>Ampoule</option>
                                                                <option value="Bag" <%= item.unit ? 'selected' : '' %>>Bag</option>
                                                                <option value="Bottle" <%= item.unit ? 'selected' : '' %>>Bottle</option>
                                                                <option value="Box" <%= item.unit ? 'selected' : '' %>>Box</option>
                                                                <option value="Bundle" <%= item.unit ? 'selected' : '' %>>Bundle</option>
                                                                <option value="Capsules" <%= item.unit ? 'selected' : '' %>>Capsules</option>
                                                                <option value="Caplets" <%= item.unit ? 'selected' : '' %>>Caplets</option>
                                                                <option value="Container" <%= item.unit ? 'selected' : '' %>>Container</option>
                                                                <option value="Nabules" <%= item.unit ? 'selected' : '' %>>Nabules</option>
                                                                <option value="Tablets" <%= item.unit ? 'selected' : '' %>>Tablets</option>
                                                                <option value="Vials" <%= item.unit ? 'selected' : '' %>>Vials</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Cost Price per Unit(₦)</label>
                                                            <input type="number" name="price" id="sale_price" class="form-control" value="<%= item.price %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Purchase Cost(₦)</label>
                                                            <input type="number" name="cost" class="form-control" id="cost" value="<%= item.cost %>" readonly>
                                                        </div>
                                                        
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Selling Price(₦)</label>
                                                            <input type="number" name="sell_price" id="sell_price" class="form-control" value="<%= item.sellprice %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Expected Income(₦)</label>
                                                            <input type="number" name="income" class="form-control" id="income" value="<%= item.income %>" readonly>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Date Received</label>
                                                           <input type="text" id="datetimepicker8" name="received" class="form-control" value="<%= item.received.toDateString() %>" >
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Loss & Adjustments</label>
                                                            <input type="number" name="loss" class="form-control" value="<%= item.loss %>">
                                                        </div>
                                                        
                                                    </div>
                                                    <div class="form-group row">
                                                        <div class="col-sm-6">
                                                                <label for="">Balance</label>
                                                                <input type="number" name="balance" class="form-control" id="cost" value="<%= item.balance %>" >
                                                        </div> 
                                                        <div class="col-sm-6">
                                                                <label for="">Remarks</label>
                                                                <input type="text" name="remarks" class="form-control" id="cost" value="<%= item.remarks %>" >
                                                        </div>
                                                    </div>
                                                   
                                                    
                                                    <button type="submit" class="btn btn-info float-right">Update</button>
                                                    
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Basic Form Inputs card end -->
                            </div>
                        </div>
                    </div>
                    <!-- Page body end -->
                </div>
            </div>
            <!-- Main-body end -->
            <!-- <div id="styleSelector">

            </div> -->
        </div>
    </div>

<% include ../../partials/footerCopy %>