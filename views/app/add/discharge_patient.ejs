<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

 <div class="pcoded-content">
        <div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Discharge Summary</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="/addmitted-patients">Addmitted Patients</a>
                            </li>
                            <li class="breadcrumb-item"><a href="#!">Discharge Form</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page header end -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Discharge/Transfer Form</h5>
                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-sm-12 mobile-inputs">
                                            <form method="POST">
                                                <!-- <div class="form-group">
                                                    <input type="text" class="form-control form-txt-primary" placeholder=".form-txt-primary">
                                                </div> -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        <label for="">Patient Name</label>
                                                        <input type="text" class="form-control" placeholder="<%= user.firstname %> <%= user.lastname %>" readonly>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="">Type</label>
                                                       <select id="dischargetype" name="type" class="form-control" onchange="showTransferTo()">
                                                           <option>Select</option>
                                                           <option value="Discharge">Discharge</option>
                                                           <option value="Transfer">Transfer</option>
                                                           <option value="Death">Death</option>
                                                       </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        <label for="">Date</label>
                                                        <input type="date" class="form-control" name="thedate" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="">Time</label>
                                                        <input type="text" class="form-control" name="time" id="datetimepicker5" required>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        <label for="">Nurse</label>
                                                        <select name="nurse" class="form-control" required>
                                                            <option selected disabled>Select </option>
                                                            <% users.forEach((user)=>{ %>
                                                                <% if(user.role === 3){ %>
                                                                    <option value="<%= user._id %>"><%= user.firstname %> <%= user.lastname %></option>
                                                                <% } %>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-6">
                                                            <label for="">Comment</label>
                                                            <input type="text" class="form-control" name="comment" placeholder="Optional">
                                                        </div>
                                                   
                                                </div> 
                                                
                                                <div class="form-group row">
                                                    
                                                    <div class="col-sm-6">
                                                        <label for="">Ward</label>
                                                        <select name="ward" class="form-control">
                                                                <option>Select</option>
                                                                <option value="Male">Male</option>
                                                                <option value="Female">Female</option>
                                                                <option value="Children">Children</option>
                                                                <option value="Pediatrics">Pediatrics</option>
                                                        </select>
                                                    </div>
                                                    <div id="transfer" class="col-sm-6">
                                                            <label for="">Transfer To:</label>
                                                           <input type="text" class="form-control" name="transferto" >
                                                        </div>
                                                </div>    
                                                       
                                                       
                                                        
                                                        
                                                    <!-- <div class="col-sm-12"> -->
                                                        
                                                    <!-- </div> -->
                                                        
                                                        
                                                        
                                                    <button type="submit" class="btn btn-info float-left">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Basic Form Inputs card end -->
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
        <!-- Main-body end -->
        <!-- <div id="styleSelector">

        </div> -->
    </div>
</div>

<% include ../../partials/footerCopy %>