<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

 <div class="pcoded-content">
        <div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Observation Chart</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="/drugs">Drugs</a>
                            </li>
                            <li class="breadcrumb-item"><a href="#!">Create Generic Drug</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page header end -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add Daily Report</h5>
                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-sm-12 mobile-inputs">
                                            <form method="POST">
                                                <!-- <div class="form-group">
                                                    <input type="text" class="form-control form-txt-primary" placeholder=".form-txt-primary">
                                                </div> -->
                                                <div class="form-group row">
                                                    <div class="col-sm-6">
                                                        <label for="">Patient Name</label>
                                                        <input type="text" class="form-control" placeholder="<%= user.firstname %> <%= user.lastname %>" readonly>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="">Ward</label>
                                                        <select name="ward" class="form-control" required>
                                                            <option selected disabled>Select Ward</option>
                                                            <option >Male</option>
                                                            <option >Female</option>
                                                            <option >Children</option>
                                                            
                                                        </select>
                                                    </div>
                                                    
                                                </div>
                                                <div class="form-group row">
                                                        <div class="col-sm-6">
                                                            <label for="">Lead Doctor</label>
                                                            <select name="doctor" class="form-control" required>
                                                                <option selected disabled>Select Doctor</option>
                                                                <% users.forEach((user)=>{ %>
                                                                    <% if(user.role === 2){ %>
                                                                        <option value="<%= user._id %>"><%= user.firstname %> <%= user.lastname %></option>
                                                                    <% } %>
                                                                <% }) %>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <label for="">Ward Round</label>
                                                            <input type="text" class="form-control" name="wardround" required>
                                                        </div>
                                                        
                                                </div>
                                                <div class="form-group row">
                                                        <div class="col-sm-6">
                                                                <label>Temperature <span class="text-danger"> (°C*)</label>
                                                                <input name="temperature" class="form-control" type="text" required>
                                                        </div>
                                                        <div class="col-sm-6">
                                                                <label>Weight <span class="text-danger"> (kg*)</span></label>
                                                                <input name="weight" id="weight" class="form-control" type="number" required>
                                                        </div>
                                                        
                                                        
                                                    </div>
                                                    <div class="form-group row">
                                                            <div id="hrate" class="col-sm-6">
                                                                    <label>Heart Rate <span class="text-danger"> (b/min*)</label>
                                                                    <input name="heartrate" class="form-control" type="text">
                                                            </div>
                                                            <div id="pulse" class="col-sm-6">
                                                                <label>Pulse <span class="text-danger"> (b/min*)</span></label>
                                                                <div class="cal-icon">
                                                                    <input name="pulse" type="text" class="form-control" >
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                    <label>Height <span class="text-danger"> (m*)</span></label>
                                                                    <input name="height" id="height" class="form-control" type="number" step="any" required>
                                                            </div>
                                                            
                                                            
                                                        
                                                    </div>
                                                    <div class="form-group row">
                                                            <div class="col-sm-6">
                                                                    <label>Respiration <span class="text-danger"> (B/min*)</label>
                                                                    <input name="respiration" class="form-control" type="text" required>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                    <label>BMI <span class="text-danger"> (kg/m^2*)</span></label>
                                                                    <input name="bmi" id="bmi" class="form-control" type="number" readonly>
                                                                    <small>Body Mass Index(BMI) = Weight(in kg) / Height(in m)²</small>
                                                            </div>
                                                            
                                                        
                                                        
                                                    </div>
                                                    <div class="form-group row">
                                                            <div class="col-sm-6">
                                                                    <label>Systolic <span class="text-danger"> (mmHg)</label>
                                                                    <input name="systolic" class="form-control" type="text" required>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                    <label>MUAC<span class="text-danger"> (muac*)</span></label>
                                                                    <select name="muac" class="form-control select" required>
                                                                        <option selected disabled>Select</option>
                                                                        <option>Green</option>
                                                                        <option>Yellow</option>
                                                                        <option>Red</option>
                                                                    </select>
                                                            </div>
                                                            
                                                            
                                                    </div>
                                                    <div class="form-group row">
                                                            <div class="col-sm-6">
                                                                    <label>Diastolic <span class="text-danger"> (mmHg)</label>
                                                                    <input name="dystolic" class="form-control" type="text" required>
                                                            </div>
                                                            <div class="col-sm-6">
                                                                    <label>RVST <span class="text-danger"> (rvs*)</span></label>
                                                                    <select name="rvs" class="form-control" required>
                                                                        <option value="+ve">+ve</option>
                                                                        <option value="-ve">-ve</option>
                                                                    </select>
                                                            </div>

                                                    </div>
                                                    <div class="form-group row">
                                                            <div class="col-sm-6">
                                                                    <label>Fetal Heart rate <span class="text-danger"> (mmHg)</label>
                                                                    <input name="fheartrate" class="form-control" type="text" >
                                                            </div>
                                                            <div class="col-sm-6">
                                                                    <label>SPO2 </label>
                                                                    <input name="spo2" class="form-control" type="text" >
                                                            </div>

                                                    </div>
                                                    
                                                <!-- <div class="form-group row">
                                                <div class="col-sm-6">
                                                        <label for="">T</label>
                                                        <input type="text" class="form-control" name="t" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="">P</label>
                                                        <input type="text" class="form-control" name="p" required>
                                                    </div>
                                                    
                                                </div>
                                                <div class="form-group row">
                                                <div class="col-sm-6">
                                                        <label for="">R</label>
                                                        <input type="text" class="form-control" name="r" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="">B/P</label>
                                                        <input type="text" class="form-control" name="bp" required>
                                                    </div>
                                                    
                                                   
                                                </div>  -->
                                                <!-- <div class="form-group row"> -->
                                                     <!-- <div class="col-sm-6">
                                                        <label for="">Input</label>
                                                        <input type="text" class="form-control" name="input" required>
                                                    </div> -->
                                                    <!-- <div class="col-sm-6">
                                                        <label for="">Output</label>
                                                        <input type="text" class="form-control" name="output" required>
                                                    </div> -->
                                                    
                                                <!-- </div> -->
                                                <div class="form-group row">
                                                
                                                    <div class="col-sm-6">
                                                        <label for="">Comment</label>
                                                        <input type="text" class="form-control" name="comment" required>
                                                    </div>
                                                    <div class="col-sm-6">
                                                            <label for="">Observation</label>
                                                            <textarea name="observation" class="form-control" cols="30" rows="10"></textarea>
                                                        </div>
                                                </div>    
                                                
                                                       
                                                       
                                                        
                                                        
                                                    <!-- <div class="col-sm-12"> -->
                                                        
                                                    <!-- </div> -->
                                                        
                                                        
                                                        
                                                    <button type="submit" class="btn btn-info float-left">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Basic Form Inputs card end -->
                        </div>
                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
        <!-- Main-body end -->
        <!-- <div id="styleSelector">

        </div> -->
    </div>
</div>

<% include ../../partials/footerCopy %>