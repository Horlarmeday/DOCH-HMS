<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

 <div class="pcoded-content">
        <div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Theater Items</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="#">Theater Items</a>
                            </li>
                            <li class="breadcrumb-item"><a href="#!"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page header end -->
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">

                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add Theater Items</h5>
                                    <div class="card-header-right">
                                            <i class="icofont icofont-rounded-down"></i>
                                            <i class="icofont icofont-refresh"></i>
                                            <i class="icofont icofont-close-circled"></i>
                                        </div>
                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-sm-12 mobile-inputs">
                                            <form method="POST">
                                                <!-- <div class="form-group">
                                                    <input type="text" class="form-control form-txt-primary" placeholder=".form-txt-primary">
                                                </div> -->
                                                <div class="form-group">
                                                        <label for="">Patient Name</label>
                                                        <input type="text" class="form-control" placeholder="<%= theater.patient.firstname %> <%= theater.patient.lastname %>" ><br>
                                                    <!-- <div class="col-sm-12"> -->
                                                        <label for="">Items</label>
                                                        <select id="itemCode" name="drug" class="form-control js-example-basic-single" onchange="getDrugPrice()">
                                                            <option selected disabled>Select</option>
                                                            <% drugs.forEach((drug)=>{ %>
                                                                    <option value="<%= drug._id %>"><%= drug.name %> </option>
                                                            <% }) %>
                                                        </select><br><br>
                                                        <label for="">Approved Quantity</label>
                                                        <input type="number" name="approvedqty" class="form-control" placeholder="Approved Quantity" required><br>
                                                    <!-- </div> -->
                                                    <!-- <div class="col-sm-12"> -->
                                                        <label for="">Quantity Used </label>
                                                        <input type="number" id="quantityused" name="consumed" class="form-control" placeholder="Quantity Used" required><br>
                                                        
                                                        <label for="">Unit Price</label>
                                                        <input type="number" id="pharmPrice" name="price" class="form-control" readonly><br>

                                                        <!-- <label for="">Extra Consumed</label>
                                                        <input type="number" id="extra" name="extraconsumed" class="form-control" placeholder="Optional"><br> -->

                                                        <label for="">Total Amount</label>
                                                        <input type="number" id="totalPharm"  name="totalamount" class="form-control" readonly><br>
                                                   
                                                </div>
                                                <button type="submit" class="btn btn-info float-right">Save</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Basic Form Inputs card end -->
                        </div>
                        <div class="col-sm-12">
                                <!-- Zero config.table start -->
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Treatment Records</h5>
                                        <div class="card-header-right">
                                            <i class="icofont icofont-rounded-down"></i>
                                            <i class="icofont icofont-refresh"></i>
                                            <i class="icofont icofont-close-circled"></i>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <div class="dt-responsive table-responsive">
                                            <table id="simpletable" class="table table-striped table-bordered nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>S/N</th>
                                                        <th>Items</th>
                                                        <th>Quantity Approved</th>
                                                        <th>Quantity Used</th>
                                                        <th>Unit Price</th>
                                                        <th>Extra Consumed</th>
                                                        <th>Total Amount</th>
                                                        <th>Created</th>
                                                       
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if(theater.theaterItems.length > 0){ %>
                                                    <% theater.theaterItems.forEach((theater)=>{ %>
                                                    <tr>
                                                        <td></td>
                                                        <td> <%= theater.drugs.name %> </td>
                                                        <td><%= theater.approvedqty %></td>
                                                        <td><%= theater.consumed %></td>
                                                        <td><%= theater.price %></td>
                                                        <td><%= theater.extraconsumed %></td>
                                                        <td><%= theater.totalamount %></td>
                                                   
                                                      
                                                        <td> <%= theater.created.toDateString() %></td>
                                                        
                                                    </tr>
                                                    <% }) %>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                    </div>
                </div>
                <!-- Page body end -->
            </div>
        </div>
        <!-- Main-body end -->
        <!-- <div id="styleSelector">

        </div> -->
    </div>
</div>

<% include ../../partials/footerCopy %>