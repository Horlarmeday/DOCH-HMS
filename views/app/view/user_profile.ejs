                                                                                    <tr>
                                                                                        <th>S/N</th>
                                                                                        <th>Date Requested</th>
                                                                                        <th>Lab Tests</th>
                                                                                        <th>Date Processed</th>
                                                                                        <th>Result</th>
                                                                                        
                                                                                        <th>RequestedBy</th>
                                                                                        <th>Status</th>
