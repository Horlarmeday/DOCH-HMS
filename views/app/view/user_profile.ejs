                                                                                    <label for="">HMO Name</label>
                                                                                    <input type="text" name="address" class="form-control" placeholder="<%= patient.hmoname %>">
                                                                                </div>
                                                                            </div>
                                                                            <div class="form-group row">
                                                                                <div class="col-sm-6">
                                                                                    <label for="">Patient HMO Code</label>
                                                                                    <input type="text" class="form-control" placeholder="<%= patient.patientcode %>">
                                                                                </div>
                                                                            </div>
                                                                            <h5 style="color:dodgerblue" class="page-title">Dependants</h5><br><br>
                                                                                <% if(patient.hmodependant.dependant1.dateofbirth != null){ %>
