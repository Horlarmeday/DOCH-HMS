                                                                                        <div class="col-sm-6">
                                                                                            <label for="">Dependant Name (1)</label>
                                                                                            <input type="text" class="form-control" placeholder="<%= patient.hmodependant.dependant1.name %>">
                                                                                        </div>
                                                                                        <div class="col-sm-6">
                                                                                            <label for="">Dependant Date of Birth (1)</label>
                                                                                            <input type="text" class="form-control" placeholder="<%= patient.hmodependant.dependant1.dateofbirth.toLocaleDateString() %>">
                                                                                        </div>
                                                                                    </div>
                                                                                <% } %>
                                                                                <% if(patient.hmodependant.dependant2.dateofbirth != null){ %>
                                                                                <div class="form-group row">
                                                                                    <div class="col-sm-6">
                                                                                        <label for="">Dependant Name (2)</label>
                                                                                        <input type="text" class="form-control" placeholder="<%= patient.hmodependant.dependant2.name %>">
                                                                                    </div>
                                                                                    <div class="col-sm-6">
                                                                                        <label for="">Dependant Date of Birth (2)</label>
                                                                                        <input type="text" class="form-control" placeholder="<%= patient.hmodependant.dependant2.dateofbirth.toLocaleDateString() %>">
                                                                                    </div>
                                                                                </div>
                                                                                <% } %>
                                                                                <% if(patient.hmodependant.dependant3.dateofbirth != null){ %>
                                                                                <div class="form-group row">
                                                                                    <div class="col-sm-6">
                                                                                        <label for="">Dependant Name (3)</label>
                                                                                        <input type="text" class="form-control" placeholder="<%= patient.hmodependant.dependant3.name %>">
                                                                                       
                                                                                    </div>
                                                                                    <div class="col-sm-6">
                                                                                        <label for="">Dependant Date of Birth (3)</label>
                                                                                        <input type="text" class="form-control" placeholder="<%= patient.hmodependant.dependant3.dateofbirth.toLocaleDateString() %>">
                                                                                    </div>
                                                                                </div>
                                                                                <% } %>
                                                                        <% } %>
                                                                </form>
                                                                </div>
                                                                
                                                            </div>
                                                            <div class="tab-pane" id="messages3" role="tabpanel">
                                                                    <div class="dt-responsive table-responsive">
                                                                            <table id="simpletable" class="table table-striped table-bordered nowrap">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th>S/N</th>
                                                                                        <th>Service/Type</th>
                                                                                        <th>Amount(&#8358;)</th>
                                                                                        <th>Mode of Payment</th>
                                                                                        <th>Status</th>
                                                                                        
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    <% patient.payments.forEach((payment)=>{ %>
                                                                                    <tr>
                                                                                        <td></td>
                                                                                        <td>
                                                                                            <% if(payment.services.length < 1){ %>
                                                                                               <p style="font-weight: 700"><%= payment.type %></p> 
                                                                                            <% }else{ %>
                                                                                                <% payment.services.forEach((service)=>{ %>
                                                                                                    <p style="font-weight: 700"><%= service.service %>
                                                                                                    <span style="font-weight: 900; color: darkorange">(&#8358;<%= service.price %>)</span></p>
                                                                                                <% }) %>
                                                                                            <% } %>
                                                                                        </td>

                                                                                        <td><%= payment.amount %></td>
                                                                                        <% if(payment.modeofpayment){ %>
                                                                                            <td><%= payment.modeofpayment %></td>
                                                                                        <% }else{ %>
                                                                                            <td>Cash</td>
                                                                                        <% } %>
                                                                                        <% if(payment.status){ %>
                                                                                        <td><label class="label label-md bg-success">Paid</label></td>
                                                                                        <% }else{ %>
                                                                                        <td><label class="label label-md bg-warning">Not Paid</label></td>
                                                                                        <% } %>
                                                                                        
                                                                                    </tr>
                                                                                    <% })  %>
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                            </div>
                                                            <div class="tab-pane" id="settings3" role="tabpanel">
                                                                    <div class="dt-responsive table-responsive">
                                                                            <table id="simpletable" class="table table-striped table-bordered nowrap">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th>S/N</th>
                                                                                        <th>Date</th>
                                                                                        <th>Examiner</th>
                                                                                        <th>Status</th>
                                                                                        <th>Type</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    <% patient.appointments.forEach((appointment)=>{ %>
                                                                                    <tr>
                                                                                        <td></td>
                                                                                        <td><%= appointment.created.toDateString() %></td>
                                                                                        <td><%= appointment.doctor.firstname %> <%= appointment.doctor.lastname %></td>
