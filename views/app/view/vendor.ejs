<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Vendors</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="/vendors">Vendors</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/add-vendor">Add Vendor</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Vendors</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>Name</th>
                                                    <th>Vendor ID</th>
                                                    <th>Email</th>
                                                    <th>Username</th>
                                                    <th>Mobile</th>
                                                    <th>Company</th>
                                                    <th>Address</th>
                                                    <th>Created Date</th>
                                                    
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% users.forEach((user)=>{ %>
                                                    <% if(user.role == 17){ %>
                                                <tr>
                                                    <td></td>
                                                    <td><%= user.firstname %> <%= user.lastname %></td>
                                                    <td><%= user.vendorId %></td>
                                                    <td><%= user.email %></td>
                                                    <td><%= user.username %></td>
                                                    <td>0<%= user.phonenumber %></td>
                                                    <td><%= user.company %></td>
                                                    <td><%= user.address %></td>
                                                    <td><%= user.createdAt.toDateString() %></td>
                                                </tr>
                                                <% }  %>
                                                <% })  %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footerCopy %>