<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Pharmacy Items</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="#!">Items</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/add-pharmacy-items">Add Item</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Items</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>Item Code</th>
                                                    <th>Item Name</th>
                                                    <th>Quantity</th>
                                                    <th>Leftover</th>
                                                    <th>Unit</th>
                                                    <th>Unit Price(₦)</th>
                                                    <th>Selling Price(₦)</th>
                                                    <th>Purchase Cost(₦)</th>
                                                    <th>Expected Income(₦)</th>
                                                    <th>Date Received</th>
                                                    <th>Vendor</th>
                                                    <th>Expiration </th>
                                                    <th>Dispense </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% items.forEach((item) => { %>
                                                    <% if(!item.labitem){ %>
                                                <tr style="cursor: pointer" onclick="window.location='/dispense-history/<%= item._id %>';">
                                                    <td></td>
                                                    <td>DRUG/ITEM/000<%= item.itemDigit %></td>
                                                    <td><%= item.name %></td>
                                                    <td><%= item.quantity %></td>
                                                    <% if(item.dispensehistory < 1){ %>
                                                        <td style="color: darkviolet"><strong>0</strong></td>
                                                        <% }else{ %>
                                                        <td style="color: darkviolet"><strong> <%= item.dispensehistory[item.dispensehistory.length -1].rquantity %></strong></td>
                                                    <% } %>
                                                    <td><%= item.unit %></td>
                                                    <td><%= item.price %></td>
                                                    <td><%= item.sellprice %></td>
                                                    <td><%= item.cost %></td>
                                                    <td><%= item.income %></td>
                                                    <td><%= item.received.toDateString() %></td>
                                                    <td><%= item.vendor %></td>
                                                    <td><%= item.expiration.toDateString() %></td>
                                                    <td> <a class="btn btn-success btn-md" href="/pharmacy-dispense/<%= item._id %>">Dispense</a></td>
                                                </tr>
                                                
                                                <% } %>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footerCopy %>