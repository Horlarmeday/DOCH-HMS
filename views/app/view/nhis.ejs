<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>
<div class="pcoded-content">
        <div class="pcoded-inner-content">
            <!-- Main-body start -->
            <div class="main-body">
                <div class="page-wrapper">
                    <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                    <!-- Page-header start -->
                    <div class="page-header">
                        <div class="page-header-title">
                            <h4>NHIS</h4>
                        </div>
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="/dashboard">
                                        <i class="icofont icofont-home"></i>
                                    </a>
                                </li>
                                <li class="breadcrumb-item"><a href="#!">NHIS Page</a>
                                </li>
                                <li class="breadcrumb-item"><a href="#"></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- Page-header end -->
                    <!-- Page-body start -->
                    <div class="page-body">
                        
                            <div class="row">
                                    <div class="col-sm-12">
                                        <!-- Material tab card start -->
                                        <div class="card">
                                            <div class="card-header">
                                                <h5>NHIS </h5>
                                                <div class="card-header-right">
                                                    <i class="icofont icofont-rounded-down"></i>
                                                    <i class="icofont icofont-refresh"></i>
                                                    <i class="icofont icofont-close-circled"></i>
                                                </div>
                                            </div>
                                            <div class="card-block">
                                                <!-- Row start -->
                                                <div class="row m-b-30">
                                                    <div class="col-lg-12 col-sm-6">
                                                        <div class="jumbotron">
                                                            <div class="text-center">
                                                                <h1><%= hmo.hmoname %></h1>
                                                            </div>
                                                        </div><hr> 
                                                        <!-- Nav tabs -->
                                                        <ul class="nav nav-tabs md-tabs" role="tablist">
                                                            <li class="nav-item">
                                                                <a class="nav-link active" data-toggle="tab" href="#home3" role="tab">HMOs</a>
                                                                <div class="slide"></div>
                                                            </li>
                                                            <li class="nav-item">
                                                                <a class="nav-link" data-toggle="tab" href="#profile3" role="tab">Services</a>
                                                                <div class="slide"></div>
                                                            </li>
                                                            <li class="nav-item">
                                                                <a class="nav-link" data-toggle="tab" href="#messages3" role="tab">Drugs</a>
                                                                <div class="slide"></div>
                                                            </li>
                                                        </ul> 
                                                        <div class="tab-content card-block">
                                                            <div class="tab-pane active" id="home3" role="tabpanel">
                                                                    <a style="color: aliceblue" class="btn btn-info text-center" data-toggle="modal" data-target="#exampleModalCenter"><i class="ti-plus">

                                                                        </i> Add HMO Name</a>
                                                                <div class="dt-responsive table-responsive">
                                                                    <table id="scr-vrt-dt" class="table table-striped table-bordered nowrap">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>S/N</th>
                                                                                <th>HMO Name</th>
                                                                                <th>HMO Code</th>
                                                                                <!-- <th>Status</th> -->
                                                                                <!-- <th>Action</th> -->
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            <% hmo.hmoenrols.forEach((hmo)=>{ %>
                                                                            <tr>
                                                                                <td></td>
                                                                                <td><%= hmo.hmoenrollee %></td>
                                                                                <td><%= hmo.hmocode %></td>
                                                                               
                                                                                
                                                                            </tr>
                                                                            <% }) %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                            <div class="tab-pane" id="profile3" role="tabpanel">
                                                                    <a style="color: aliceblue" class="btn btn-info mb-5" data-toggle="modal" data-target="#exampleModalCenter2">
                                                                        <i class="ti-plus">

                                                                        </i> Add <%= hmo.hmoname %> Services</a>
                                                                <div class="table-responsive dt-responsive">
                                                                    <table id="simpletable" class="table table-striped table-bordered nowrap">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>S/N</th>
                                                                                <th>Service Name</th>
                                                                                <th>Price </th>
                                                                                <!-- <th>Status</th> -->
                                                                                <!-- <th>Action</th> -->
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                                <% hmo.hmoservices.forEach((hmo)=>{ %>
                                                                            <tr>
                                                                                <td></td>
                                                                                <td><%= hmo.service %></td>
                                                                                <td><%= hmo.price %></td>
                                                                               
                                                                                
                                                                            </tr>
                                                                            <% }) %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                            <div class="tab-pane" id="messages3" role="tabpanel">
                                                                <a style="color: aliceblue" class="btn btn-info mb-5" data-toggle="modal" data-target="#exampleModalCenter3">
                                                                    <i class="ti-plus"></i> Add <%= hmo.hmoname %> Drugs</a>
                                                                <div class="table-responsive dt-responsive">
                                                                    <table id="multi-colum-dt" class="table table-striped table-bordered nowrap">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>S/N</th>
                                                                                <th>Drug Name</th>
                                                                                <th>Price</th>
                                                                                <!-- <th>Status</th> -->
                                                                                <!-- <th>Action</th> -->
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                                <% hmo.hmoservices.forEach((hmo)=>{ %>
                                                                            <tr>
                                                                                <td></td>
                                                                                <td><%= hmo.drug %></td>
                                                                                <td><%= hmo.price %></td>
                                                                               
                                                                             
                                                                            </tr>
                                                                            <% }) %>
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>            
                                                    </div>
                                                </div>
                                                <!-- Row end -->
                                                
                                            </div>
                                        </div>
                                        <!-- Material tab card end -->
                                    </div>
                                </div>

                    </div>
                    <!-- Page-body end -->
                </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle"><%= hmo.hmoname %> Enrolles</h5>
                        </div>
                        <div class="modal-body">
                        <form method="POST">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input name="hmoenrollee" class="form-control" type="text" placeholder="Enter <%= hmo.hmoname %> Enrollee">
                                </div>
                            </div> 
                            <div class="form-group">
                                    <div class="col-md-12">
                                        <input name="hmocode" class="form-control" type="text" placeholder="Enter  <%= hmo.hmoname %> Code">
                                    </div>
                                </div> 
                            <div class="mb-5">
                                <input type="submit" class="btn btn-primary" value="Save">
                            </div>
                        </form>
                        </div>
                        
                        <!-- <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                        </div> -->
                    </div>
                </div>
            </div>
            <!-- Modal End -->

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle"><%= hmo.hmoname %> Services</h5>
                            </div>
                            <div class="modal-body">
                            <form action="/hmo-service/<%= hmo._id %>" method="POST">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input name="service" class="form-control" type="text" placeholder="Enter <%= hmo.hmoname %> Service">
                                  </div>
                                </div> 
                                <div class="form-group">
                                        <div class="col-md-12">
                                            <input name="price" class="form-control" type="text" placeholder="Enter Service Price">
                                        </div>
                                    </div> 
                                <div class="mb-5">
                                    <input type="submit" class="btn btn-primary" value="Save">
                                </div>
                            </form>
                            </div>
                            
                            <!-- <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                            </div> -->
                        </div>
                    </div>
                </div>
                <!-- Modal End -->

                <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle"><%= hmo.hmoname %> Drugs</h5>
                            </div>
                            <div class="modal-body">
                            <form action="/hmo-drugs/<%= hmo._id %>" method="POST">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input name="drug" class="form-control" type="text" placeholder="Enter Drug Name">
                                    </div>
                                </div> 
                                <div class="form-group">
                                        <div class="col-md-12">
                                            <input name="price" class="form-control" type="text" placeholder="Enter Drug Price">
                                        </div>
                                    </div> 
                                <div class="mb-5">
                                    <input type="submit" class="btn btn-primary" value="Save">
                                </div>
                            </form>
                            </div>
                            
                            <!-- <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                            </div> -->
                        </div>
                    </div>
                </div>
                <!-- Modal End -->

            </div>
            <!-- Main-body end -->

            <!-- <div id="styleSelector">

            </div> -->
        </div>
    </div>
    <% include ../../partials/footerCopy %>