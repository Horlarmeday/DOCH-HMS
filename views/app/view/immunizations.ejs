<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Immunizations</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="#">Immunizations</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/add-immunization">Add Immunization</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Immunizations</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>Mother's Name</th>
                                                    <th>Mother's Phone</th>
                                                    <th>Address</th>
                                                    <th>Baby's Name</th>
                                                    <th>Date of Birth</th>
                                                    <th>Place of Birth</th>
                                                    <th>At Birth</th>
                                                    <th>At 6weeks</th>
                                                    <th>At 10weeks</th>
                                                    <th>At 14weeks</th>
                                                    <!-- <th>At 14weeks</th> -->
                                                    <th>At 6months</th>
                                                    <th>At 9months</th>
                                                    <th>At 1year</th>
                                                    <th>At 15months</th>
                                                    <th>At 2years</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% immunizations.forEach((immunization)=>{ %>
                                                <tr>
                                                    <td></td>
                                                    <td><%= immunization.patient.firstname %> <%= immunization.patient.lastname %></td>
                                                    <td><%=  immunization.patient.phonenumber %></td>
                                                    <td><%=  immunization.patient.address %></td>
                                                    <td><%=  immunization.name %></td>
                                                    <td><%=  immunization.dateofbirth.toLocaleString() %></td>
                                                    <td><%=  immunization.placeofbirth %></td>
                                                    <td><%=  immunization.atBirth %></td>
                                                    <td><%=  immunization.at6weeks %></td>
                                                    <td><%=  immunization.at10weeks %></td>
                                                    <td><%=  immunization.at14weeks %></td>
                                                    <td><%=  immunization.at6months %></td>
                                                    <td><%=  immunization.at9months %></td>
                                                    <td><%=  immunization.at1year %></td>
                                                    <td><%=  immunization.at15months %></td>
                                                    <td><%=  immunization.at2years %></td>
                                                    
                                                </tr>
                                                <% })  %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footerCopy %>