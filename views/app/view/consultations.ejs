<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Consultations</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="#!">Consultations</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/add-consultation">Add Consultation</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Consultation History</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>Patient ID</th>
                                                    <th>Name</th>
                                                    <th>Visit Reason</th>
                                                    <th>Diagnosis</th>
                                                    <th>Drugs Prescribed</th>
                                                    
                                                    <th>Lab Tests</th>
                                                    <th>Lab Result</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% consultations.forEach((consultation)=>{ %>
                                                <tr>
                                                    <td></td>
                                                    <td><%= consultation.patient.patientId %></td>
                                                    <td> <%= consultation.patient.firstname %> <%= consultation.patient.lastname %></td>
                                                    <td> <%= consultation.visit %></td>
                                                    <td> <%= consultation.diagnosis %></td>
                                                    <% if(consultation.pharmacystatus){ %>
                                                    <td>  
                                                        <% consultation.drugsObject.forEach((drug)=>{ %>
                                                            <p style="font-weight: 700"><%= drug.drugs.name %>   
                                                            </p>
                                                            <p> 
                                                                <small> <a class="drugger"  href="#" > 
                                                                Starting Date: <%= drug.startingdate.toLocaleDateString() %></a></small><br>
                                                                <small> <a class="drugger"  href="#" > 
                                                                Quantity: <%= drug.quantity %></a></small><br>
                                                                <small> <a class="drugger"  href="#" > 
                                                                Dosage: <%= drug.direction %> <%= drug.dose %> in <%= drug.time %></a></small><br>
                                                                <small> <a class="drugger"  href="#" > 
                                                                Unit: <%= drug.medicineunit %> <%= drug.unit %></a></small><br>
                                                                <small> <a class="drugger"  href="#" > 
                                                                Notes: <%= drug.medicineunit %> <%= drug.notes %></a></small>
                                                            </p>
                                                        <% }) %>
                                                    </td>
                                                    <% }else{ %>
                                                        <td> <i style="color: red" class="ti-alert"></i> No Prescribed Drugs yet</td>
                                                    <% } %>
                                                    
                                                    <% if(consultation.labstatus){ %>
                                                    <td> 
                                                       <% consultation.labtestObject.forEach((test)=>{ %>
                                                            <p style="font-weight: 700"><%= test.name %></p>
                                                       <% }) %>
                                                    </td>
                                                    <% }else{ %>
                                                        <td> <i style="color: red" class="ti-alert"></i> No Lab test yet</td>
                                                    <% } %>
                                                    <% if(consultation.labtestfinish){ %>
                                                        <td> <a href="/lab-result/<%= consultation._id %>">View Result</a></td>
                                                    <% }else{  %>
                                                       <td> <i style="color: red" class="ti-alert"></i> No Result Yet</td>
                                                    <% } %>

                                                    <% if(!consultation.status){ %>
                                                    <td><label class="label label-md bg-warning">Ongoing</label></td>
                                                    <% }else{ %>
                                                        <td><label class="label label-md bg-success">Completed</label></td>
                                                    <% } %>
                                                    <% if(consultation.pharmacystatus){ %>
                                                        <td><a href="#" class="btn btn-default">Prescribed</a></td>
                                                        <% }else{ %>
                                                            <td><a href="/consultation/<%= consultation.patient._id %>" class="btn btn-info">Prescribe</a></td>
                                                        <% } %>
                                                    
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="modal fade" id="exampleModalCenter3" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalCenterTitle">Choose Drug</h5>
                                                    </div>
                                                    <div class="modal-body">
                                                       
                                                            <div class="form-group row">
                                                                <label for="" class="col-sm-2 col-form-label">Price</label>
                                                                    <div class="col-sm-6">
                                                                        <input type="text" class="form-control" id="drugAmount" readonly>
                                                                    </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Starting Date</label>
                                                                <div class="col-sm-6">
                                                                    <input type="date" class="form-control" name="startingdate">
                                                                </div>
                                                            </div> 
                                                            <div class="form-group row">
                                                                <label for="" class="col-sm-2 col-form-label">Quantity</label>
                                                                <div class="col-sm-6">
                                                                    <input type="text" class="form-control" name="quantity">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label for="" class="col-sm-2 col-form-label">Medicine Unit</label>
                                                                    <div class="col-sm-4">
                                                                            <input type="text" class="form-control" name="medicineunit">
                                                                    </div>
                                                                    <div class="col-sm-4">
                                                                        <select name="unit" class="form-control">
                                                                                <option>Select Unit</option>
                                                                                <option>mg</option>
                                                                                <option>mg/1cc</option>
                                                                                <option>mg/2cc</option>
                                                                                <option>mg/3cc</option>
                                                                                <option>mg/4cc</option>
                                                                                <option>mg/5cc</option>
                                                                                <option>mcg</option>
                                                                                <option>grams</option>
                                                                                <option>mL</option>
                                                                        </select>
                                                                    </div>
                                                            </div> 
                                                            <div class="form-group row">
                                                                <label for="" class="col-sm-3 col-form-label">Directions</label>
                                                                <div class="col-sm-2">
                                                                    <input type="text" class="form-control" name="direction">
                                                                </div>
                                                                <div class="col-sm-3">
                                                                    <select name="dose" class="form-control">
                                                                        <option>Select</option>
                                                                        <option>Tablet</option>
                                                                        <option>Capsule</option>
                                                                        <option>Solution</option>
                                                                        <option>Suspension</option>
                                                                        <option>tsp</option>
                                                                        <option>units</option>
                                                                        <option>cream</option>
                                                                        <option>ointment</option>
                                                                        <option>gtts(drops)</option>
                                                                    </select>
                                                                </div>
                                                                <p class="mt-2">in</p>
                                                                <div class="col-sm-3">
                                                                    <select name="time" class="form-control">
                                                                            <option>Select</option>
                                                                            <option>a.m</option>
                                                                            <option>p.m</option>
                                                                            <option>stat</option>
                                                                            <option>ante</option>
                                                                            <option>p.r.n</option>
                                                                            <option>a.c</option>
                                                                            <option>p.c</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                    <label for="" class="col-sm-2 col-form-label">Notes</label>
                                                                    <div class="col-sm-6">
                                                                        <input type="text" class="form-control" name="notes">
                                                                    </div>
                                                            </div>
                                                           
                                                       
                                                    </div>
                                                                                                                 
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footerCopy %>