<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Consultations</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="#!">Consultations</a>
                            </li>
                            <li class="breadcrumb-item"><a href="/add-consultation">Add Consultation</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Consultation History</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>Patient ID</th>
                                                    <th>Name</th>
                                                    <th>Visit Reason</th>
                                                    <th>Diagnosis</th>
                                                    <th>Drugs Prescribed</th>
                                                    <th>Directions</th>
                                                    <th>Lab Tests</th>
                                                    <th>Lab Result</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% consultations.forEach((consultation)=>{ %>
                                                <tr>
                                                    <td></td>
                                                    <td><%= consultation.patient.patientId %></td>
                                                    <td> <%= consultation.patient.firstname %> <%= consultation.patient.lastname %></td>
                                                    <td> <%= consultation.visit %></td>
                                                    <td> <%= consultation.diagnosis %></td>
                                                    <% if(consultation.pharmacystatus){ %>
                                                    <td>  
                                                        <% consultation.drugsObject.forEach((test)=>{ %>
                                                        
                                                            <p style="font-weight: 700"><%= test.name %></p>
                                                        <% }) %>
                                                        
                                                    </td>
                                                    <% }else{ %>
                                                        <td> <i style="color: red" class="ti-alert"></i> No Prescribed Drugs yet</td>
                                                    <% } %>
                                                    <% if(consultation.pharmacystatus){ %>
                                                        <td>
                                                            Dose: <%= consultation.prescription.dose %>  <br>
                                                            Duration: <%= consultation.prescription.duration %> <br>
                                                            Frequency: <%= consultation.prescription.frequency %> <br>
                                                            Direction: <%= consultation.prescription.direction %>
                                                        </td>
                                                    <% }else{ %>
                                                        <td> <i style="color: red" class="ti-alert"></i> No Prescribed Drugs yet</td>
                                                    <% } %>
                                                    <% if(consultation.labstatus){ %>
                                                    <td> 
                                                       <% consultation.labtestObject.forEach((test)=>{ %>
                                                            <p style="font-weight: 700"><%= test.name %></p>
                                                       <% }) %>
                                                    </td>
                                                    <% }else{ %>
                                                        <td> <i style="color: red" class="ti-alert"></i> No Lab test yet</td>
                                                    <% } %>
                                                    <% if(consultation.labtestfinish){ %>
                                                        <td> <a href="#">View Result</a></td>
                                                    <% }else{  %>
                                                       <td> <i style="color: red" class="ti-alert"></i> No Result Yet</td>
                                                    <% } %>

                                                    <% if(!consultation.status){ %>
                                                    <td><label class="label label-md bg-warning">Ongoing</label></td>
                                                    <% }else{ %>
                                                        <td><label class="label label-md bg-success">Completed</label></td>
                                                    <% } %>
                                                    <% if(consultation.pharmacystatus){ %>
                                                        <td><a href="#" class="btn btn-default">Prescribed</a></td>
                                                        <% }else{ %>
                                                            <td><a href="/consultation/<%= consultation.patient._id %>" class="btn btn-info">Prescribe</a></td>
                                                        <% } %>
                                                    
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footerCopy %>