<% include ../../partials/header %>
<% include ../../partials/sidebarCopy %>

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <!-- Page-header start -->
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Ante Natal Patients</h4>
                    </div>
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="/dashboard">
                                    <i class="icofont icofont-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item"><a href="/all-antenatal">Ante Natal Records</a>
                            </li>
                            <li class="breadcrumb-item"><a href="!#"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Page-header end -->
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>All Ante Natal Records</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th rowspan="2">S/N</th>
                                                    <th rowspan="2">ANC ID</th>
                                                    <th rowspan="2">Patient Name</th>
                                                    <th rowspan="2">Age</th>
                                                    <th rowspan="2">Occupation</th>
                                                    <th rowspan="2">Gravida & Parity</th>
                                                    <th rowspan="2">LMP</th>
                                                    <th rowspan="2">EDD</th>
                                                    <th rowspan="2">Date Registered</th>
                                                    <th rowspan="2">Status</th>
                                                    <th rowspan="2">Action</th>
                                                    <th rowspan="2">Results</th>
                                                    <th colspan="7">History</th>
                                                    <tr>
                                                        <th>Medical</th>
                                                        <th>Surgical</th>
                                                        <th>Family</th>
                                                        <th>Blood Transfusion</th>
                                                    </tr>
                                                    
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% ancs.forEach((anc)=>{ %>
                                                <tr >
                                                    <td></td>
                                                    <td> <%= anc.ancId %></td>
                                                    <td> <a href="/patient/<%= anc.patient._id %>"><%= anc.patient.firstname %>  <%= anc.patient.lastname %></a> </td>
                                                    <td> <%= anc.age %></td>
                                                    <td><%= anc.occupation %></td>
                                                    <td><span style="color: cornflowerblue"><%= anc.gravida %></span> & <span style="color: lightseagreen"> <%= anc.parity %></span></td>
                                                    <td> <%= anc.lmp.toDateString() %></td>
                                                    <% if(anc.edd){ %>
                                                    <td> <%= anc.edd.toDateString() %></td>
                                                    <% }else{ %>
                                                       <td></td>
                                                    <% } %>
                                                    <td> <%= anc.created.toDateString() %></td>
                                                    <% if(anc.status){ %>
                                                    <td><label class="label label-md bg-success">Active</label></td>
                                                    <% }else{ %>
                                                    <td><label class="label label-md bg-warning">Inactive</label></td>
                                                    <% } %>
                                                    <% if(anc.status){ %>
                                                   <td>
                                                       <a class="btn btn-inverse" href="/ante-natal/<%= anc.patient._id %>">Ante Natal </a>
                                                       <a class="btn btn-success" href="/patient-delivery-information/<%= anc.patient._id %>">Delivery Info</a>
                                                   <a class="btn btn-danger" href="/post-natal-examination/<%= anc.patient._id %>">Post Natal </a>
                                                   </td>
                                                   <% }else{ %>
                                                    <td>Not Active</td>
                                                    <% } %>
                                                    <td>
                                                        <a href="/antenatal-results/<%= anc.patient._id %>">View Results</a>
                                                    </td>
                                                    <td><%= anc.medicalhistory %></td>
                                                    <td><%= anc.surgicalhistory %></td>
                                                    <td><%= anc.familyhistory %></td>
                                                    <td><%= anc.bloodtransfusion %></td>
                                                </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../../partials/footerCopy %>