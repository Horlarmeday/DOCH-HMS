                                                                                <option value="ATM">ATM</option>
                                                                                <option value="Transfer">Transfer</option>
                                                                                <option value="Bank Deposit">Bank Deposit</option>
                                                                            </select>
                                                                    </div>
                                                                <% }%>
                                                        </td>
                                                        <td>
                                                            <% if(!consultation.pharmacypaid){ %>
                                                            <button value="<%= totalPrice %>"  name="<%= consultation._id %>" type="button" class="btn btn-success drugpay"><i class="ti-money"></i> Paid?</button>
                                                            <% } %>
                                                            <% if(consultation.pharmacypaid){ %>
                                                            <a href="/pharmacy-invoice/<%= consultation._id %>" class="btn btn-primary"><i class="ti-receipt"></i> Invoice </a>
                                                            <% } %>
                                                </tr>
                                                
                                               
                                                
                                                <% } %>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- IMAGING FEE -->
