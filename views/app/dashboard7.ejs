<% include ../partials/header %>
<% include ../partials/sidebarCopy %>

 <!-- Center page starts -->
 <div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Flash message -->
                <% if(error && error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <%= error %>
                    </div>
                <% } %>
                <% if(success && success.length > 0){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= success %>
                        </div>
                <% } %>
                <div class="page-header">
                    <div class="page-header-title">
                        <h4>Dashboard</h4>
                    </div>
                </div>
                <div class="page-body">
                    <div class="row">
                        <!-- Visitor Chart Start-->
                        <div class="col-md-6 col-xl-4">
                            <div class="card">
                                <div class="card-block-big card-visitor-block">
                                        <%
                                        const newDoctors = users.map(doctor =>{
                                          if (doctor.role === 2){
                                            const rDoctor = doctor.role === 2
                                            return rDoctor;
                                          }                    
                                        })
                                        const doctors = newDoctors.filter(v => v).length;
                                     %>
                                    <div class="row">
                                        <div class="col-sm-8  card-visitor-button">
                                            <button class="btn btn-primary btn-icon"><i class="icofont icofont-stethoscope"></i></button>
                                            <div class="card-contain">
                                                <h6><%= doctors %></h6>
                                                <p class="text-muted f-18 m-0">Doctors</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 text-center">
                                            <span class="visitor-chart"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-4">
                            <div class="card">
                                <div class="card-block-big card-visitor-block">
                                        <%
                                        const newPatients = users.map(patient =>{
                                          if (patient.role === 8){
                                            const rPatient = patient.role === 8
                                            return rPatient;
                                          }                    
                                        })
                                        const patients = newPatients.filter(v => v).length;
                                     %>
                                    <div class="row">
                                        <div class="col-sm-8 card-visitor-button">
                                            <button class="btn btn-warning btn-icon"><i class="icofont icofont-paralysis-disability"></i></button>
                                            <div class="card-contain">
                                                <h6><%= patients %></h6>
                                                <p class="text-muted f-18 m-0">Patients</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 text-center">
                                            <span class="sale-chart"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-xl-4">
                            <div class="card">
                                <div class="card-block-big card-visitor-block">
                                    <div class="row">
                                        <div class="col-sm-8 card-visitor-button">
                                            <button class="btn btn-success btn-icon"><i class="icofont icofont-money"></i></button>
                                            <div class="card-contain">
                                                <h6><%= appointments.length %></h6>
                                                <p class="text-muted f-18 m-0">Appointments</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 text-center">
                                            <span class="resource-barchart"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Visitor Chart End-->

                        <!-- REGISTRATION FEE -->
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Registration & Consultation Fee</h5>
                                    <div class="card-header-right">
                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="simpletable" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>PatientID</th>
                                                    <th>Name</th>
                                                    <th>Age</th>
                                                    <th>Patient Type</th>
                                                    <th>Phone</th>
                                                    <th>Payments</th>
                                                    <th>Total</th>
                                                    <th>Status</th>
                                                    <th>Mode of Payment</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% users.forEach((patient) => { %>
                                                    <% if(patient.role === 8){ %>
                                                    
                                                <tr>
                                                    <%
                                                        var birthday = new Date(patient.birthday)
                                                        var today = new Date()
                                                        var age = today.getFullYear() - birthday.getFullYear()
                                                        if(today.getMonth() < birthday.getMonth()){
                                                            age
                                                        }
                                                        if(today.getMonth() == birthday.getMonth() && today.getDate() < birthday.getDate()){
                                                            age
                                                        }
                                                    %>
                                                    <%
                                                        var total = patient.account.registration + patient.account.consultation
                                                    %>
                                                   
                                                        <td></td>
                                                        <td><%= patient.patientId %></td>
                                                        <td> <a href="/patient/<%= patient.id %>"><%= patient.firstname %> <%= patient.lastname %></a></td>
                                                        <td><%= age %></td>
                                                        
                                                            <% if(patient.createdby == 1){ %>
                                                                <td><label class="label label-bg bg-success">Normal Patient</label></td>
                                                            <% }else{ %>  
                                                                <td><label class="label label-bg bg-danger">Emergency Patient</label></td>
                                                            <% } %>  
                                                        
                                                        <td>+234<%= patient.phonenumber %></td>
                                                        <td>
                                                            <% if(patient.account.registration && patient.account.consultation){ %>
                                                                <span style="color:blue">Registration Fee: </span> &#8358;<%= patient.account.registration %><br>
                                                                <span style="color:blue">Consultation Fee: </span> &#8358;<%= patient.account.consultation %>
                                                            <% } %>
                                                            <% if(patient.account.registration  && !patient.account.consultation){ %>
                                                                <span style="color:blue">Registration Fee: </span> &#8358;<%= patient.account.registration %>
                                                            <% } %>
                                                            <% if(patient.account.consultation && !patient.account.registration){ %>
                                                                <span style="color:blue">Consultation Fee: </span> &#8358;<%= patient.account.consultation %>
                                                            <% } %>
                                                        </td>
                                                        <td style="font-weight: 900; font-size: 1rem">&#8358;<%= total %></td>
                                                        <% if(patient.account.paid === false){ %>
                                                        <td><label class="label label-md bg-warning">pending</label></td>
                                                        <% }else{ %>
                                                        <td><label class="label label-md bg-success">paid</label></td>
                                                        <% } %>
                                                        <td>
                                                            <% if(!patient.account.paid){ %>
                                                                <div class="input-group">
                                                                        <select id="modeofpayment1" name="modeofpayment" class="form-control" >
                                                                            <option>Select</option>
                                                                            <option value="Cash">Cash</option>
                                                                            <option value="ATM">ATM</option>
                                                                            <option value="Transfer">Transfer</option>
                                                                            <option value="Bank Deposit">Bank Deposit</option>
                                                                        </select>
                                                                </div>
                                                            <% }%>
                                                                
                                                        </td>
                                                        <td>
                                                            <% if(!patient.account.paid){ %>
            
                                                               <button value="<%= total %>" name="<%= patient._id %>" type="button" class="btn btn-success pay">Paid?</button>
                                                            <% } %>
                                                            <% if(patient.account.paid){ %>
                                                               <a href="/invoice/<%= patient._id %>" class="btn btn-primary"><i class="ti-receipt"></i> Invoice </a>
                                                            <% } %>
                                                        </td>
                                                   
                                                </tr>
                                                
                                               
                                                <% } %>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- LABORATORY TEST FEE -->
                        <div class="col-sm-12">
                            <!-- Zero config.table start -->
                            <div class="card">
                                <div class="card-header">
                                    <h5>Laboratory Test Fee</h5>
