                                        <i class="icofont icofont-rounded-down"></i>
                                        <i class="icofont icofont-refresh"></i>
                                        <i class="icofont icofont-close-circled"></i>
                                    </div>
                                </div>
                                
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="order-table" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>PatientID</th>
                                                    <th>Patient Name</th>
                                                    <th>Patient Type</th>
                                                    <th>Tests</th>
                                                    <th>Total Amount</th>
                                                    <th>Status</th>
                                                    <th>Mode of Payment</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% consultations.forEach((consultation) => { %>
                                                    <% if(consultation.labtestObject.length > 0){ %>
                                                <tr>
                                                     
                                                        <td></td>
                                                        <td><%= consultation.patient.patientId %></td>
                                                        <td> <a href="/patient/<%= consultation.patient._id %>"><%= consultation.patient.firstname %> <%= consultation.patient.lastname %></a></td>
                                                        
                                                                <% if(consultation.patient.createdby == 1){ %>
                                                                    <td><label class="label label-bg bg-success">Normal Patient</label></td>
                                                                <% }else{ %>  
                                                                    <td><label class="label label-bg bg-danger">Emergency Patient</label></td>
                                                                <% } %>  
                                                           
                                                        <%
                                                            function getSum(total, num) {
                                                                return total + num;
                                                            }
                                                            const totalLabPrice = consultation.labtestObject.map(price =>{
                                                                const rPrice = price.price
                                                                return rPrice;
                                                                               
                                                            })
                                                            var totalAmount;
                                                            if(totalLabPrice === undefined || totalLabPrice.length == 0){
                                                                totalAmount = 0
                                                            }else{
                                                                totalAmount = totalLabPrice.reduce(getSum)
                                                            }
                                                            
                                                        %>
                                                        <td>
                                                            <% consultation.labtestObject.forEach((test)=>{ %>
                                                                <p style="font-weight: 500"><%= test.name %>
                                                                     <span style="font-weight: 900; color: darkorange">(&#8358;<%= test.price %>)</span></p>
                                                            <% }) %>
                                                        </td>
                                                        <td style="font-weight: 900; font-size: 1rem">&#8358;<%= totalAmount %></td>
                                                        <% if(consultation.labpaid === false){ %>
                                                        <td><label class="label label-md bg-warning">pending</label></td>
                                                        <% }else{ %>
                                                        <td><label class="label label-md bg-success">paid</label></td>
                                                        <% } %>
                                                        <td>
                                                            <% if(!consultation.labpaid){ %>
                                                                <div class="input-group">
                                                                        <select id="modeofpayment2" name="modeofpayment" class="form-control" >
                                                                            <option>Select</option>
                                                                            <option value="Cash">Cash</option>
                                                                            <option value="ATM">ATM</option>
                                                                            <option value="Transfer">Transfer</option>
                                                                            <option value="Bank Deposit">Bank Deposit</option>
                                                                        </select>
                                                                </div>
                                                            <% }%>
                                                        </td>
                                                        <td>
                                                         <% if(!consultation.labpaid){ %>
                                                            <button value="<%= totalAmount %>" id="pnotify-success" name="<%= consultation._id %>" type="button" class="btn btn-success labpay"><i class="ti-money"></i> Paid?</button>
                                                         <% } %>   
                                                         <% if(consultation.labpaid){ %>
                                                            <a href="/labtest-invoice/<%= consultation._id %>" class="btn btn-primary"><i class="ti-receipt"></i> Invoice </a>
                                                         <% } %>   
                                                         </td>
                                                </tr>
                                               
                                                <% } %>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- PHARMACY FEE -->
